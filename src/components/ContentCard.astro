---
import { Image } from 'astro:assets'
import AnnouncementImage from '../assets/images/announcement.png'
import BackImage from '../assets/images/banner.webp'
interface Props {
  class?: string
  style?: string
}

const { class: className, style } = Astro.props
---


    <div class="card-base p-6 mb-4">

        <div class="card-base p-1 mb-0.1">
            <script is:inline></script>
            <div class="flex items-center gap-2">

            <h2 class="text-2xl font-bold text-black/90 dark:text-white/90">Welcome to my blog👋</h2>
        </div>
             <br/>
        <div class="prose max-w-none text-black/75 dark:text-white/75">
            <Image src={BackImage} alt="欢迎图片" class="rounded-xl w-full mb-4"/>
            <p class="text-base">首次光临本站，请先查看公告</p>
            <p class="text-base">Welcome to my site, please check the announcement first</p>
            <p class="text-base">当サイトへようこそ。まずはお知らせをご確認ください</p>
        </div>
    </div>
    <!-- card -->
<div class="link-card__container">
  <a href="/posts/announcement/" class="link-card">
    <div class="link-card__info">
      <div class="link-card__title">Announcement/置顶公告/トップのお知らせ</div>
      <div class="link-card__description">README FIRST</div>
      <div class="link-card__metadata">
        <div class="link-card__domain">
          <img alt="favicon" class="link-card__favicon" src="https://elvish.me/favicon/favicon-light-32.png">
          <span class="link-card__domain-name">elvish.me</span>
        </div>
      </div>
    </div>
    <div class="link-card__thumbnail">
      <Image src={AnnouncementImage} alt="公告图片" class="link-card__image"/>
    </div>
  </a>
</div>
    <!-- card -->
